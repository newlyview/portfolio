<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="0.4">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="한국IT교육원\n5년연속우수기관선정"
            android:textColor="#000000"
            android:textSize="10dp" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/round" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/round_orange" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/round_yello" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/round_green" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/round_blue" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/round_nam" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/round_purple" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/font"
            android:text="수강신청 개설과목"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/virtualization_btn"
            android:fontFamily="@font/font"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="가상화\n시스템"
            android:textColor="#000000"
            android:background="@drawable/frame"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bigbata_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:fontFamily="@font/font"
            android:text="빅\n데이터"
            android:textColor="#000000"
            android:background="@drawable/frame"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/infomation_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:fontFamily="@font/font"
            android:text="정보\n관리"
            android:textColor="#000000"
            android:background="@drawable/frame"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/block1_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:fontFamily="@font/font"
            android:text="블록체인\n서비스"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/electronic_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:fontFamily="@font/font"
            android:textColor="#000000"
            android:text="전기\nPLC"
            android:background="@drawable/frame"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/block_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:fontFamily="@font/font"
            android:text="블록체인\n플랫폼"
            android:textColor="#000000"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/medical_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="의료기기\n제작"
            android:fontFamily="@font/font"
            android:textColor="#000000"
            android:layout_height="80dp"
            android:background="@drawable/frame"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/selfdriving_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:fontFamily="@font/font"
            android:text="자율\n주행"
            android:textColor="#000000"
            android:background="@drawable/frame"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/online_go_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@drawable/squre2"
            android:fontFamily="@font/font"
            android:text="온라인\n상담"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="한국IT교육원 대구 광역시 동구 아양로 135\n대표자:신영호 사업자번호:502-95-03872 / Fax:053-939-0005
대표 E-mail:9520008@gmail.com\n통신판매업신고번호:제2005-대구동구-0487호 \n개인정보보호책임자:신주홍 (diwjs@hanmail.net)\nCopyright 대구국비지원무료교육센터- 한국IT교육원 All Rights Reserved. "
            android:textSize="7dp"
            android:textColor="#000000"
            android:fontFamily="@font/font"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dial_btn"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/call1"
            android:textSize="7dp" />

        <Button
            android:id="@+id/dial_btn1"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/font"
            android:text="053-952-0008"
            android:textColor="#000000"
            android:textSize="5dp" />
    </LinearLayout>
</LinearLayout>