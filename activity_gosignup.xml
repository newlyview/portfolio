<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GosignupActivity"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="수강신청"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#AA8854"
            android:textSize="30dp" />

        <Button
            android:id="@+id/go_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_action_homego1"
            android:backgroundTint="#000000" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="이메일로발송됩니다"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#AA8854"
            android:text="성 명"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/name_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@drawable/squre1"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textColor="#AA8854"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

        <NumberPicker
            android:id="@+id/year_picker_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="년"
            android:textColor="#AA8854"
            android:textSize="20dp" />
        <NumberPicker
            android:id="@+id/month_picker_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#AA8854"
            android:text="월"
            android:textSize="20dp" />
        <NumberPicker
            android:id="@+id/day_picker_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </NumberPicker>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#AA8854"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="일"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성\t별"
            android:layout_marginTop="3dp"
            android:textColor="#AA8854"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        <RadioGroup
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="여성"/>

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="150dp"
                android:layout_height="wrap_content"
                android:text="남성"/>

        </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font"
            android:text="번 호"
            android:textColor="#AA8854"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/phone_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/squre1"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="15dp">

    <Button
        android:id="@+id/email_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/squre3"
        android:textColor="#AA8854"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1.2"
        android:text="보내기" />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="3dp"></View>

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.2"
        android:text="다시작성"
        android:background="@drawable/squre3"
        android:textColor="#AA8854"
        android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>